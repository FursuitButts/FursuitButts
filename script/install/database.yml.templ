# SQLite version 3.x
#   gem install sqlite3-ruby (not necessary on OS X Leopard)
development:
  adapter: postgresql
  database: e621_dev
  pool: 5
  timeout: 5000
  url: <%= ENV['DATABASE_URL'] %>

# Warning: The database defined as "test" will be erased and
# re-generated from your development database when you run "rake".
# Do not set this db to the same as development or production.
test:
  adapter: postgresql
  database: e621_test
  pool: 5
  timeout: 5000
  url: <%= ENV['DATABASE_URL'] %>

production:
  adapter: postgresql
  database: e621
  pool: 5
  timeout: 5000
  url: <%= ENV['DATABASE_URL'] %>

# read only databases, just point to local copies if you have no need
ro_development:
  adapter: postgresql
  database: e621_dev
  url: <%= ENV['RO_DATABASE_URL'] %>

ro_test:
  adapter: postgresql
  database: e621_test
  url: <%= ENV['RO_DATABASE_URL'] %>

ro_production:
  adapter: postgresql
  database: e621
  url: <%= ENV['RO_DATABASE_URL'] %>

ro_staging:
  adapter: postgresql
  database: e621
  url: <%= ENV['RO_DATABASE_URL'] %>

archive_development:
  adapter: postgresql
  database: e621_dev_arch
  url: <%= ENV['ARCHIVE_DATABASE_URL'] %>

archive_test:
  adapter: postgresql
  database: e621_test_arch
  url: <%= ENV['ARCHIVE_DATABASE_URL'] %>

archive_production:
  adapter: postgresql
  database: e621_arch
  url: <%= ENV['ARCHIVE_DATABASE_URL'] %>

archive_staging:
  adapter: postgresql
  database: e621_arch
  url: <%= ENV['ARCHIVE_DATABASE_URL'] %>
